@using Webzine.WebApplication.ViewModels
@model HomeViewModel
@* colonne Chronique *@
<div class="row">
    @* Derniers titres chroniqués *@
    <div class="row">
        <h1>Derniers titres chroniqués</h1>
    </div>
    <div class="row">
        <ul class="list-unstyled">
            @foreach (var objet in Model.Titres_chroniques)
            {
                <li class="media bg-light mr-4 mb-4">
                    <a asp-controller="titre" asp-action="index" asp-route-id="@objet.IdTitre"><img src="@objet.UrlJaquette" class="img-thumbnail ml-3 mt-3" width="200" height="200"></a>
                    <div class="media-body p-3 mb-2">
                        <a asp-controller="titre" asp-action="index" asp-route-id="@objet.IdTitre">
                            <h5 class="mb-1"> @objet.Artiste.Nom  @objet.Libelle </h5>
                        </a>
                        <p class="text-secondary">
                            @objet.Chronique
                        </p>
                        <a asp-controller="titre" asp-action="index" asp-route-id="@objet.IdTitre" class="btn btn-primary">Lire la suite</a>
                        <i class="fas fa-calendar ml-3"> @objet.DateSortie.ToString("dd/MM/yyyy HH:mm:ss") </i>
                        <i class="fas fa-tags ml-3"></i>
                        <a asp-controller="style" asp-action="index" asp-route-libelle="@objet.TitresStyles[0].Libelle">
                            @objet.TitresStyles[0].Libelle
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-2">
        @if (Model.Page > 1)
        {
            <a asp-controller="home" asp-action="index" asp-route-id="@(Model.Page-1)"><button class="btn btn-secondary">Page precedente</button></a>
        }
        
    </div>

    <div class="col-2 ml-auto">
        @if (Model.MaxPage > Model.Page)
        {
            <a asp-controller="home" asp-action="index" asp-route-id="@(Model.Page+1)"><button class="btn btn-secondary">Page suivante</button></a>
        }
        
    </div>
            

<div class="row">
    @* Titres les plus populaires *@
    <h1>Titres les plus populaires</h1>
    <div class="card-deck mb-4">
        @foreach (var objet in Model.Titres_populaires)
        {
            <div class="card">
                <img src="@objet.UrlJaquette" class="card-img-top" height="300" />
                <div class="card-body">
                    <a href="#">
                        <h3 class="card-title">@objet.Libelle</h3>
                    </a>
                    par
                    <a href="#">
                        @objet.Artiste.Nom
                    </a>
                </div>
            </div>
        }
    </div>
</div>


