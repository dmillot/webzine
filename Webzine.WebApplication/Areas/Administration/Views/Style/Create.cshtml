@model Style
@{
    ViewData["Admin"] = true;
}

<div>
    <h2>Création d'un style</h2>

    <form asp-action="Create" method="post" class="form-group mt-3 mb-4">
        <div class="row">
            <div class="col-1 text-center">
                Libellé :
            </div>
            <div class="col-2">
                <input asp-for="@Model.IdStyle" hidden />
                <input asp-for="@Model.Libelle" class="form-control" placeholder="@Model.Libelle" />
            </div>
            <div class="col-1"><button class="btn btn-primary">Sauvegarder</button></div>
        </div>
    </form>
    @Html.ActionLink("Retour à l'administration des styles", "Index")
</div>

