@model List<Style>
@{
    ViewData["Admin"] = true;
}

<div class="container-fluid">
    <h1 class="mt-2">Styles</h1>
    <hr />
    <a asp-area="administration" asp-controller="style" asp-action="create" class="btn btn-primary mb-2"><i class="fas fa-plus"></i>Ajouter un nouveau style</a>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-light">
            <tr>
                <th scope="col">Libellé</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@element.Libelle</td>
                    <td class="text-center">
                        <a asp-area="Administration" asp-controller="style" asp-action="edit" asp-route-id="@element.IdStyle" class="mr-1"><i class="fas fa-edit"></i></a>
                        <a asp-area="Administration" asp-controller="style" asp-action="delete" asp-route-id="@element.IdStyle" class="mr-1"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
       
    </table>
</div>