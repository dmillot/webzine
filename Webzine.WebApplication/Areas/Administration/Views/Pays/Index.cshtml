@model List<Pays>
@{
    ViewData["Admin"] = true;
}
<div class="container-fluid">
    <h1 class="mt-2">Pays</h1>

    <hr />

    <a asp-area="administration" asp-controller="pays" asp-action="create" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un nouveau pays</a>

    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-light">
            <tr>
                <th scope="col">Nom du pays</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nom</td>
                    <td class="text-center">
                        <a asp-area="administration" asp-controller="pays" asp-action="edit" asp-route-id="@item.IdPays" class="mr-1"><i class="fas fa-edit"></i></a>
                        <a asp-area="administration" asp-controller="pays" asp-action="delete" asp-route-id="@item.IdPays" class="mr-1"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>