@model Artiste
@{
    ViewData["Admin"] = true;
}
<div class="container-fluid">
    <h1 class="mt-2">Création d'un artiste</h1>

    <form asp-action="Create" method="post">
        <div class="form-group row">
            <label for="artistName" class="col-sm-2 col-form-label">Nom de l'artiste</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="artistName" asp-for="@Model.Nom">
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputBiography" class="col-sm-2 col-form-label">Biographie</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="inputBiography" rows="3" asp-for="@Model.Biographie"></textarea>
                <span asp-validation-for="Biographie" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Sauvegarder</button>
            </div>
        </div>
    </form>

    <div class="row m-0 p-0 mt-5">
        <a href="@Url.Action("Index", "AdminArtist")">Retour à l'administration des artistes</a>
    </div>


</div>