@model Artiste
@{
    ViewData["Admin"] = true;
}

<div class="container-fluid">
    <h1 class="mt-2">Édition d'un artiste</h1>

    <form asp-action="Edit" method="post">
        <div class="form-group row">
            <label for="artistName" class="col-sm-2 col-form-label">Nom de l'artiste</label>
            <div class="col-sm-10">
                <input asp-for="@Model.IdArtiste" hidden />
                <input type="text" class="form-control" id="artistName" asp-for="@Model.Nom">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputBiography" class="col-sm-2 col-form-label">Biographie</label>
            <div class="col-sm-10">
                <textarea asp-for="@Model.Biographie" class="form-control" id="inputBiography" rows="3"></textarea> 
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Sauvegarder</button>
            </div>
        </div>
    </form>

    <div class="row m-0 p-0 mt-5">
        <a href="@Url.Action("Index", "AdminArtist")">Retour à l'administration des artistes</a>
    </div>


</div>

