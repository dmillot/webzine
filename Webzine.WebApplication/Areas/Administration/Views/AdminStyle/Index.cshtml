@using Webzine.WebApplication.Areas.Administration.ViewModels
@model AdminStyleViewModel

@{ Layout = "_LayoutAdm";}

<div>
    <h2>Styles</h2>
    <button class="btn btn-primary"><i class="fas fa-plus"></i>Ajouter un nouveau style</button>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th  scope="col">Libellé</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var element in Model.Styles)
            {
            <tr >
                <td>@element.Name</td>
                <td class="text-center"><a href="#" class="col"><i class="fas fa-edit"></i></a><a href="#" class="col"><i class="fas fa-trash"></i></a></td>
            </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
    </table>
</div>