@model List<Titre>

@{
    ViewData["Admin"] = true;
}

    <div class="container-fluid">
        <h1 class="mt-2">Titres</h1>

        <hr />

        <a asp-area="administration" asp-controller="titre" asp-action="create" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter un nouveau titre</a>

        <table class="table table-striped table-bordered mt-3">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Artiste</th>
                    <th scope="col">Libellé</th>
                    <th scope="col">Duree</th>
                    <th scope="col">Date de sortie</th>
                    <th scope="col"><span class="fa fa-eye"></span></th>
                    <th scope="col"><span class="fa fa-thumbs-up"></span></th>
                    <th scope="col"><span class="fa fa-comments"></span></th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var titre in Model)
                {
                    <tr>
                        <td>@titre.Artiste.Nom</td>
                        <td>@titre.Libelle</td>
                        <td>@titre.DurationToString()</td>
                        <td>@titre.DateSortie.ToShortDateString()</td>
                        <td>@titre.NbLectures.ToString()</td>
                        <td>@titre.NbLikes.ToString()</td>
                        <td>@titre.Commentaires.Count.ToString()</td>
                        <td class="text-center">
                            <a asp-area="administration" asp-controller="titre" asp-action="edit" asp-route-id="@titre.IdTitre" class="mr-1"><i class="fas fa-edit"></i></a>
                            <a asp-area="administration" asp-controller="titre" asp-action="delete" asp-route-id="@titre.IdTitre" class="mr-1"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
