@model TitleViewModel
@{
    ViewData["Title"] = "Creer un titre";
    ViewData["Admin"] = true;
}

<div>
    <h1>Créer un titre</h1>
    <hr class="style1">

    <form method="post" asp-area="administration" asp-controller="titre" asp-action="create">
        <div class="form-group row">
            <label for="Author" class="col-2 col-form-label">Nom de l'artiste <span class="text-danger">* </span></label>
            <select class="form-control col-10" asp-for="@Model.Titre.IdArtiste">
                @foreach (var artist in Model.Artistes)
                {
                    <option value="@artist.IdArtiste" isSelected>@artist.Nom</option>
                }
            </select>
        </div>

        <div class="row">
            <label for="Title" class="col-2">Titre <span class="text-danger">* </span></label>
            <div class="form-group  col-10 p-0">
                <input type="text" class="form-control" asp-for="@Model.Titre.Libelle" placeholder="Titre" />
                <span asp-validation-for="Titre.Libelle" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label for="Description" class="col-2">Chronique <span class="text-danger">* </span></label>
            <div class="form-group col-10 p-0">
                <textarea class="form-control" asp-for="@Model.Titre.Chronique" placeholder="Description"></textarea>
                <span asp-validation-for="Titre.Chronique" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col col-2">
                <label for="ReleaseDate">Date de sortie <span class="text-danger">* </span></label>
            </div>
            <div class="col col-4 p-0">
                <div class="form-group col-10 p-0">
                    <input type="date" value="" class="form-control" asp-for="@Model.Titre.DateSortie" />
                    <span asp-validation-for="Titre.DateSortie" class="text-danger"></span>
                </div>
            </div>
            <div class="col col-2 p-0">
                <label for="Duration">Duree en secondes <span class="text-danger">* </span></label>
            </div>
            <div class="col col-4">
                <div class="form-group col-10 p-0">
                    <div class="input-group">
                        <input type="number" class="form-control col-10" asp-for="@Model.Titre.Duree">
                        <div class="input-group-append">
                            <span class="input-group-text" id="inputGroupPrepend">Secondes</span>
                        </div>
                    </div>
                    <span asp-validation-for="Titre.Duree" class="text-danger"></span>
                </div>
                
            </div>
        </div>

        <div class="row">
            <label for="Album" class="col-2">Album <span class="text-danger">* </span></label>
            <div class="form-group col-10 p-0">
                <input type="text" class="form-control col-10" asp-for="@Model.Titre.Album" placeholder="Titre de l'album" />
                <span asp-validation-for="Titre.Album" class="text-danger"></span>
            </div> 
        </div>

        <div class="row">
            <label for="AlbumPicture" class="col-2">Jaquette de l'album <span class="text-danger">* </span></label>
            <div class="form-group col-10 p-0">
                <input type="text" class="form-control col-10" asp-for="@Model.Titre.UrlJaquette" />
                <span asp-validation-for="Titre.UrlJaquette" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <label for="UrlListen" class="col-2">URL d'écoute</label>
            <div class="form-group col-10 p-0">
                <input type="text" class="form-control col-10" asp-for="@Model.Titre.UrlEcoute" />
                <span asp-validation-for="Titre.UrlEcoute" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label for="Styles" class="col-2">Styles</label>
            <div class="col-10">
                @foreach (var style in Model.Styles)
                {
                    <text>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="StylesChecked" value="@style.IdStyle">
                            <label class="form-check-label" for="StylesChecked">@style.Libelle</label>
                        </div>
                    </text>
                }
            </div>

        </div>

        <div class="form-group row">
            <label for="ReadCounter" class="col-2">Nombre de lectures</label>
            <span class="col-4">0</span>
            <label for="LikeCounter" class="col-2">Nombre de likes</label>
            <span class="col-4">0</span>
        </div>

        <div class="row">
            <span class="col-2"></span>
            <span class="col-10"><input type="submit" class="btn btn-primary" value="Sauvegarder" /></span>
        </div>

    </form>

    <br />

    <a asp-area="administration" asp-controller="titre" asp-action="index">Retour a l'administration des titres</a>

</div>